<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.sch.smktelkom_mlg.privateassignment.xirpl331.the_movie_database">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="The Movie Database"
        android:launchMode="singleTop"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="The Movie Database"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.DetailsActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName="id.sch.smktelkom_mlg.privateassignment.xirpl331.the_movie_database.Activity.MainActivity"
            android:theme="@style/AppTheme">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="id.sch.smktelkom_mlg.privateassignment.xirpl331.the_movie_database.Activity.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="id.sch.smktelkom_mlg.privateassignment.xirpl331.the_movie_database.Utils.SaveFavorites"
            android:authorities="com.abhi.android.moviedb.Utils.SaveFavorites" />

    </application>

</manifest>